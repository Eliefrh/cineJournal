<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/affichageImageFilm"
        android:layout_width="101dp"
        android:layout_height="148dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/affichageTitreFilm"
        android:layout_width="279dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/affichageImageFilm"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/afficherSloganFilm"
        android:layout_width="277dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/affichageImageFilm"
        app:layout_constraintTop_toBottomOf="@+id/affichageTitreFilm" />

    <RatingBar
        android:id="@+id/afficherNoteFilm"
        android:layout_width="236dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:isIndicator="true"
        app:layout_constraintStart_toEndOf="@+id/affichageImageFilm"
        app:layout_constraintTop_toBottomOf="@+id/afficherSloganFilm" />
</androidx.constraintlayout.widget.ConstraintLayout>