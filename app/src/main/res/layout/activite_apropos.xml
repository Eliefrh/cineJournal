<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".APropos">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </include>


    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="171dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:text="Ciné Journal"
        android:textAlignment="center"
        android:textColor="#7A7979"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <ImageView
        android:id="@+id/imageViewCine"
        android:layout_width="162dp"
        android:layout_height="111dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescription"
        app:srcCompat="@drawable/icon_foreground" />

    <TextView
        android:id="@+id/textAPropos"
        android:layout_width="347dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:text="Par Khalil Alhelou (1895560) et Elie Alfrieh (2067396), dans le cadre de cours 420-5GM-RE, Automne 2023, Collège de Bois-de-Boulogne."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCine" />

    <TextView
        android:id="@+id/textAPropos2"
        android:layout_width="347dp"
        android:layout_height="57dp"
        android:layout_marginBottom="16dp"
        android:text="Cette application sert à journalisé les films que vous écoutez et combien vous les appréciez"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAPropos"
        app:layout_constraintVertical_bias="0.054" />

    <Button
        android:id="@+id/retour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:background="#03808F"
        android:backgroundTint="#03808F"
        android:text="Retour"
        android:textColorHighlight="#03808F"
        android:textColorHint="#03808F"
        android:textColorLink="#03808F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>